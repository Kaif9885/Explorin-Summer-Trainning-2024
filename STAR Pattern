#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
int n ; 
    cin>>n;
    // Upper part of the pattern
    for (int i = 1; i <= n; ++i) {
        for(int j=1;j<n-i;j++)
        {
            cout<<" ";
        }
        for (int j = 1; j <= (i*2)-1; ++j) {
            cout << "*";
        }
        cout << endl;
    }
    
    // Lower part of the pattern
    for (int i = n; i > 0; --i) {
        for(int j=1;j<n-i;j++)
        {
            cout<<" ";
        }
        for (int j = 1; j <= (i*2)-1; ++j) {
            cout << "*";
        }
        cout << endl;
    }
    
    return 0;
}

