#include <iostream>
using namespace std;
int main() {
	int n;
	cin >> n;    //Reading input from STDIN
	// cout << "Input number is " << n << endl;	// Writing output to STDOUT
	for(int i = 1; i<=n; i++)
	    { for(int j = 1 ; j<= n; j++)
		 {
			if(i==1 || i==n || i+j == n+1)
			cout<<'*';
			else
			cout<<' ';
		 }
		 cout<<endl;
}
}
